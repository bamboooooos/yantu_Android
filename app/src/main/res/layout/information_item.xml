<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/book_show_background"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inforTitle"
            android:text="标题"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inforIntro"
            android:text="内容\n内容\n内容\nasfasf"
            android:textSize="20dp"
            android:maxLines="3"
            android:layout_below="@+id/inforTitle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inforTime"
            android:text="2019/11/14/16/01"
            android:textSize="20dp"
            android:layout_below="@+id/inforIntro"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>