<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/SetHoriLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/settingToolbar"
        android:layout_marginTop="50dp"
        android:background="#008b8b"
        />

    <TextView
        android:id="@+id/SetHoriText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SetHoriLine1"
        android:layout_marginTop="10dp"
        android:text="     手机号码"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/PhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/SetHoriLine1"
        android:text="未绑定"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:textColor="#00CED1"
        />

    <View
        android:id="@+id/SetHoriLine2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/SetHoriText1"
        android:layout_marginTop="10dp"
        android:background="#008b8b"
        />

    <View
        android:id="@+id/SetHoriLine3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/SetHoriLine2"
        android:layout_marginTop="100dp"
        android:background="#008b8b"
        />

    <TextView
        android:id="@+id/SetHoriText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SetHoriLine3"
        android:layout_marginTop="10dp"
        android:text="     关于研途"
        android:textSize="25sp"
        />



    <View
        android:id="@+id/SetHoriLine4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/SetHoriText2"
        android:layout_marginTop="10dp"
        android:background="#008b8b"
        />

    <Button
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="退出登录"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:background="#DC143C"
        android:gravity="center"
        />
</RelativeLayout>